@using Coursework.Models.Account;
@using WebApplication45.Models;
@model LoginModel;

@{
	Layout = "_LoginLayout";
}

<h3 class="title">Вхід до акаунту</h3>
<h3 class="title non-valid">@ViewBag.LoginErrorMessage</h3>
<form method="post">
    <div class="line">
        <label for="login">Логін або e-mail</label>
        <span class="non-valid">@Html.ValidationMessageFor(Model => Model.Login)</span>
        <input name="Login" id="login" type="text" placeholder="Введіть логін або e-mail">
    </div>
    <div class="line">
        <label for="password">Пароль</label>
        <span class="non-valid">@Html.ValidationMessageFor(Model => Model.Password)</span>
        <input name="Password" id="password" type="password" placeholder="Введіть пароль">
    </div>
    <input class="btn" type="submit" value="Увійти">
    <a class="btn btn-register" href="/Account/Register">Зареєструватися</a>
</form>