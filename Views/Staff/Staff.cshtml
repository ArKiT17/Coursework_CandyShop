<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Кондитерський магазин</title>
	<link href="https://fonts.googleapis.com/css2?family=Balsamiq+Sans&family=Caveat:wght@700&display=swap"
		  rel="stylesheet">
	<link rel="stylesheet" href="/css/staff.css">
</head>
<body>
	<header>
		<p class="name">Майстерня солодощів</p>
		<nav>
			<ul>
				<li><a href="/Home/Index">Головна сторінка</a></li>
				<li><a href="/Home/Menu">Меню</a></li>
				<li><a href="/Home/Staff" class="active">Команда</a></li>
				<li><a href="/Home/Cart">Кошик</a></li>
			</ul>
		</nav>
	</header>
	<main>
		@foreach (Staff person in Model) {
			<div class="card">
				<img src="@person.ImagePath">
				<div class="info">
					<h3>@person.Name</h3>
					<p>@person.Description</p>
				</div>
			</div>
		}
	</main>
	<footer>
		<p>&#64;2023 Всі права захищені.</p>
	</footer>
</body>
</html>