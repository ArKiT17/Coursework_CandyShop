@model List<Item>

<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Кондитерський магазин</title>
	<link href="https://fonts.googleapis.com/css2?family=Balsamiq+Sans&family=Caveat:wght@700&display=swap"
		  rel="stylesheet">
	<link rel="stylesheet" href="/css/menu.css">
</head>
<body>
	<header>
		<p class="name">Майстерня солодощів</p>
		<nav>
			<ul>
				<li><a href="/Home/Index">Головна сторінка</a></li>
				<li><a href="/Home/Menu" class="active">Меню</a></li>
				<li><a href="/Home/Staff">Команда</a></li>
				<li><a href="/Home/Cart">Кошик</a></li>
			</ul>
		</nav>
	</header>
	<main>
		@foreach (Item item in Model) {
			<div class="card">
				<img src="@item.ImagePath">
				<h3>@item.Name</h3>
				<p class="price">@item.Price</p>
				<a href="#" class="btn">У кошик</a>
			</div>
		}
	</main>
	<footer>
		<p>&#64;2023 Всі права захищені.</p>
	</footer>
</body>
</html>