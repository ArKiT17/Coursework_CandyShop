@model Item

<link rel="stylesheet" href="~/css/Modal/item.css">

<form method="post" class="card">
	<div class="card-header">
		<h3>Інформація про товар</h3>
	</div>
	<hr>
	<div class="card-image">
		<img class="image" src="@Model.ImagePath" id="image">
		<input type="text" name="ImagePath" id="link" placeholder="Посилання" value="@Model.ImagePath" required>
	</div>
	<hr>
	<div class="card-info">
		<input type="text" name="Id" placeholder="ID" value="@Model.Id" hidden="hidden">
		<input type="text" name="Id_show" id="id" placeholder="ID" value="@Model.Id" disabled>
		<input type="text" name="Name" id="name" placeholder="Назва" value="@Model.Name" required>
		<input type="number" name="Price" id="price" placeholder="Ціна" value="@Model.Price" required>
	</div>
	<div class="card-buttons">
		<button class="btn-close" onclick="closeModal()">Закрити</button>
		<button class="btn-save" type="submit">Зберегти</button>
	</div>
</form>