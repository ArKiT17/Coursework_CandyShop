@model List<Staff>

@{
	Layout = "_AdminLayout";
}

@section Styles {
	<style>
		.active2 {
			background: #fff100;
			border-radius: 100px;
		}

		.head-list, .list ul li {
			grid-template-columns: 10% 20% 40% 16% 14%;
		}
	</style>
}

<div class="head-list">
	<span class="text">ID</span>
	<span class="text">Ім'я</span>
	<span class="text">Опис</span>
</div>
<div class="list">
	<ul>
		@foreach (Staff staff in Model) {
			<li>
				<span class="text">@staff.Id</span>
				<span class="text">@staff.Name</span>
				@if (staff.Description.Length > 20) {
					<span class="text">@staff.Description.Substring(0, 20)...</span>
				} else {
					<span class="text">@staff.Description</span>
				}
				<button class="btn-edit" onclick="openModal({ url: '/Admin/ModalStaff', id: '@staff.Id' })"><span>Редагувати</span></button>
				<button class="btn-delete" onclick="openModal({ url: '/Admin/ModalDelete', id: '@staff.Id' })"><span>Видалити</span></button>
			</li>
		}
	</ul>
</div>
<button class="btn" onclick="openModal({ url: '/Admin/ModalStaff', id: '-1' })">Додати співробітника</button>